{
    "appId": "com.tempstox.studentlibrary",
    "productName": "StudentLib",
    "files": [
        "web-dist/**/*",
        "electron/**/*"
    ],
    "extraMetadata": {
        "main": "electron/main.cjs"
    },
    "directories": {
        "buildResources": "build",
        "output": "release"
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "publisherName": "tempstox.com",
        "icon": "build/icon.ico"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    }
}